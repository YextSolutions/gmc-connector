{
  "$id": "ce_product",
  "$schema": "https://schema.yext.com/config/km/field-presentation/v1",
  "entityType": "product",
  "displayName": "Product",
  "presentationEntries": [
    {
      "displayName": "Content",
      "entryType": "DIVIDER"
    },
    {
      "displayName": "Core Information",
      "entryType": "SECTION",
      "fields": [
        {
          "id": "name",
          "visibleOnAdd": true
        },
        {
          "id": "sku",
          "visibleOnAdd": true
        },
        {
          "id": "entityId",
          "visibleOnAdd": true
        },
        {
          "id": "parentProduct",
          "visibleOnAdd": true
        }
      ]
    },
    {
      "displayName": "Product Details",
      "entryType": "SECTION",
      "fields": [
        {
          "id": "richTextDescription",
          "visibleOnAdd": true
        },
        {
          "id": "stockStatus"
        },
        {
          "id": "color"
        },
        {
          "id": "size"
        },
        {
          "id": "brand"
        },
        {
          "id": "salesChannel"
        },
        {
          "id": "gtin"
        },
        {
          "id": "price"
        }
      ]
    },
    {
      "displayName": "Media",
      "entryType": "SECTION",
      "fields": [
        {
          "id": "photoGallery"
        },
        {
          "id": "videos"
        }
      ]
    },
    {
      "defaultCollapsed": true,
      "displayName": "Additional Attributes",
      "entryType": "SECTION",
      "fields": [
        {
          "id": "keywords"
        }
      ]
    },
    {
      "defaultCollapsed": true,
      "displayName": "Landing Pages",
      "entryType": "SECTION",
      "fields": [
        {
          "id": "landingPageUrl"
        }
      ]
    },
    {
      "displayName": "Other",
      "entryType": "DIVIDER"
    },
    {
      "defaultCollapsed": true,
      "displayName": "Internal Use Only",
      "entryType": "SECTION",
      "fields": [
        {
          "id": "folder"
        },
        {
          "id": "labels"
        },
        {
          "id": "timezone"
        }
      ]
    },
    {
      "displayName": "Settings",
      "entryType": "DIVIDER"
    },
    {
      "defaultCollapsed": true,
      "displayName": "Knowledge Assistant",
      "entryType": "SECTION",
      "fields": [
        {
          "id": "primaryConversationContact"
        },
        {
          "id": "nudgeEnabled"
        }
      ]
    }
  ]
}